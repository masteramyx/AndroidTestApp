<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    android:orientation="vertical"
    tools:context="com.example.kyle.testapp.ProfileActivity">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardCornerRadius="5dp"

        app:cardElevation="20dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:text="Kenny"
                android:background="#8c000000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/charHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/mass"
            android:text="Mass:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/charHeight"/>

        <TextView
            android:id="@+id/hair_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/mass"/>

        <TextView
            android:id="@+id/skin_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/hair_color"/>

        <TextView
            android:id="@+id/eye_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/skin_color"/>

        <TextView
            android:id="@+id/birth_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/eye_color"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor=" #000000"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/birth_year"/>



    </RelativeLayout>
</LinearLayout>
